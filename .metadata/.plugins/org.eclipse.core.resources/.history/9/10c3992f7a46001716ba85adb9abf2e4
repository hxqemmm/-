package Order;

public class Kuaisu {
	public static void main(String[] args) {
		int[] a={3,4,9,0,7};
		
	}
	
	static void Order(int left,int right,int[] a){
		int i,j,temp;
		if(left>right){
			return;
		}
		temp=left;
		i=left;
		j=right;
		
		while(i!=j){
			while(a[j]>a[temp]&&i<j){	//先从右往左
				j--;
			}
			while(a[i]<a[temp]&&i<j){	//再从左往右
				i++;
			}
		}
		if(i<j){	//交换位置
			a[temp]=a[i];
			a[i]=a[j];
			a[j]=a[temp];
		}
		
		/**
		 * 进行分治
		 * */
		a[left]=a[i];
		a[i]=a[temp];
		
		Order(0, left, a);
		Order(left, right, a);
	}
}
